<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/foodImgDetail"
            android:layout_width="212dp"
            android:layout_height="152dp"
            android:layout_marginStart="99dp"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/foodNameDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="131dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="133dp"
            android:text="FoodName"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/foodImgDetail" />

        <TextView
            android:id="@+id/foodPriceDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="168dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="168dp"
            android:text="00.00"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/foodImgDetail" />

        <TextView
            android:id="@+id/foodDescDetail"
            android:layout_width="297dp"
            android:layout_height="146dp"
            android:layout_marginStart="58dp"
            android:layout_marginTop="84dp"
            android:layout_marginEnd="56dp"
            android:text="Some description"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/foodPriceDetail" />

        <Button
            android:id="@+id/addButtonDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="156dp"
            android:layout_marginEnd="104dp"
            android:text="Add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/spinnerDetail"
            app:layout_constraintTop_toBottomOf="@+id/foodImgDetail" />

        <Spinner
            android:id="@+id/spinnerDetail"
            android:layout_width="104dp"
            android:layout_height="31dp"
            android:layout_marginStart="94dp"
            android:layout_marginTop="104dp"
            android:layout_marginEnd="21dp"
            app:layout_constraintEnd_toStartOf="@+id/addButtonDetail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/foodNameDetail" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>